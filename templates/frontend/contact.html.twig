{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <main>
        <section id="page" class="page">
            <div class="breadcrumb">
                <nav  style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ absolute_url(path('app_frontend_index', {'_locale': locale})) }}"><i class="fa-solid fa-house"></i></a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contact</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col contenu-page p-lg-5">
                    <div class="row">
                        <div class="col-md-8 formulaire">
                            <h4>{{ 'Form'|trans }}</h4>
                            {{ form_start(form, {'attr':{'novalidate': 'novalidate', 'id':'contact'}}) }}

                                <div class="form-group">
                                    <div class="col-12 form-floating mt-3">
                                        {{ form_widget(form.nom) }}
                                        {{ form_label(form.nom) }}
                                        {{ form_errors(form.nom) }}
                                    </div>
                                    <div class="col-12 form-floating mt-3">
                                        {{ form_widget(form.email) }}
                                        {{ form_label(form.email) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                    <div class="col-12 form-floating mt-3">
                                        {{ form_widget(form.localisation) }}
                                        {{ form_label(form.localisation) }}
                                        {{ form_errors(form.localisation) }}
                                    </div>
                                    <div class="form-floating mt-3">
                                        {{ form_widget(form.message) }}
                                        {{ form_label(form.message) }}
                                        {{ form_errors(form.message) }}
                                    </div>
                                </div>
                                <div class="d-grid gap-2 mt-4">
                                    {{ form_widget(form) }}
                                    <button type="submit" class="btn btn-danger">{{ 'Send'|trans }}</button>
                                </div>

                            {{ form_end(form) }}
                        </div>
                        <div class="col-md-4 coordonees">
                            <h4>{{'Contact details'|trans}}</h4>
                            <div class="row">
                                <div class="col-12 mt-3">
                                    <a href="#"><i class="fa-solid fa-home"></i> Abidjan Cocody angre 7Ã¨ tranche</a>
                                </div>
                                <div class="col-12 mt-3">
                                    <a href="tel:+2252722529989"><i class="fa-solid fa-phone"></i> +225 27 22 52 99 89 </a>
                                </div>
                                <div class="col-12 mt-3">
                                    <a href="mailto:infos@itpcwa.org"> <i class="fa-solid fa-envelope"></i> infos@itpcwa.org</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mt-5">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3972.283928750913!2d-3.9867683857321756!3d5.373603296102307!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfc1eca91b170519%3A0x3197bc9906bc8008!2sCommissariat+de+police+du+30+i%C3%A8me+arrondissement!5e0!3m2!1sfr!2sci!4v1528912133979" width="" height="" frameborder="0" style="border:0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

{% block translate %}
    {% for locale in locales %}
        {% if locale != app.request.locale %}
            <a href="{{ absolute_url(path('app_frontend_contact', {'_locale': locale})) }}"><img src="{{ absolute_url(asset('assets/images/flag_'~locale~'.svg')) }}" alt="" ></a>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script>
        function onSubmit(token) {
            document.getElementById("contact").submit();
        }
    </script>
{% endblock %}