<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}ITPC West Africa{% endblock %}</title>
        <link rel="shortcut icon" href="{{ absolute_url(asset('/assets/images/favicon.svg')) }}" type="image/x-icon">
        {% block metas %}{% endblock %}

        <link rel="dns-prefetch" href="//cdn.jsdelivr.net">
        <link rel="dns-prefetch" href="//cdnjs.cloudflare.com">
        <link rel="dns-prefetch" href="//unpkg.com">
        <link rel="dns-prefetch" href="//fonts.googleapis.com">
        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/style2.css')) }}">
        {% endblock %}
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-104978409-5"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-104978409-5');
        </script>

    </head>
    <body>
        <div class="wrapper">
            <div class="container boxed">
                <header>
                    <section id="topbar" class="topbar">
                        <div class="row topbar-row">
                            <div class="col-md-10 infos">
                                <h2>INFOS</h2>
                                {{ render(url('app_frontend_message',{'_locale': locale})) }}
                            </div>
                            <div class="col-md-2 text-end flag" style="padding-right: 50px;">
                                {% block translate %}
                                    {% for locale in locales %}
                                        {% if locale != app.request.locale %}
                                            <a href="{{ path('app_frontend_index', {'_locale': locale}) }}"><img src="{{ absolute_url(asset('assets/images/flag_'~locale~'.svg')) }}" alt="" ></a>
                                        {% endif %}
                                    {% endfor %}
                                {% endblock %}

                                <!--<a href="#"><img src="assets/images/flag_fr.svg" alt=""></a>-->
                            </div>
                        </div>
                    </section>
                    <section id="navlogo" class="navlogo">
                        <div class="row navlogo-row justify-content-center align-content-center align-items-center">
                            <div class="col-lg-3 logo text-lg-start text-md-center mb-md-3">
                                <a href="{{ path('app_frontend_index', {'_locale': locale}) }}"><img src="{{ absolute_url(asset('assets/images/logo-b.svg')) }}" alt=""></a>
                            </div>
                            <div class="col-lg-8 d-none d-md-block coordonnees">
                                <div class="row mt-3 justify-content-center align-content-center align-items-center">
                                    <div class="col-12 col-md-4">
                                        <a href="#">
                                            <i class="fa-solid fa-phone"></i> +225 27 22 52 99 89
                                        </a>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <a href="#">
                                            <i class="fa-solid fa-envelope"></i> infos@itpcwa.org
                                        </a>
                                    </div>
                                    <div class="col-12 col-md-5">
                                        <a href="#">
                                            <i class="fa-solid fa-house"></i> Abidjan Cocody angre 7è tranche
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="menu" class="menu">
                        <nav class="navbar navbar-expand-lg navbar-dark bg-transparent" id="navbar_top">
                            <div class="container"  data-aos="fade-up" data-aos-duration="2500">
                                <a class="navbar-brand" href="{{ path('app_frontend_index', {'_locale': locale}) }}"><img src="{{ absolute_url(asset('assets/images/logo_bw.svg')) }}" alt="" class="img-fluid invisible" width="75" id="navbar_logo"></a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                                    <ul class="navbar-nav justify-content-between align-items-center">
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="{{ path('app_frontend_index', {'_locale': locale}) }}"><span>{{ 'Home'|trans }}</span></a>
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                {{ 'Who are we?'|trans }}
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                                <li><a class="dropdown-item" href="#">Présentation</a></li>
                                                <li><a class="dropdown-item" href="#">Mission / Vision</a></li>
                                                <li><a class="dropdown-item" href="#">Axes stratégiques</a></li>
                                                <li><a class="dropdown-item" href="#">Equipe</a></li>
                                                <li><a class="dropdown-item" href="#">Zones d'intervention</a></li>
                                            </ul>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><span>{{ 'News'|trans }}</span></a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><span>{{ 'Projects'|trans}} </span></a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><span>{{ 'Resources'|trans }}</span>   </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><span>{{ 'Recruitments'|trans }}</span>   </a>
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                {{ 'Gallery'|trans }}
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                                <li><a class="dropdown-item" href="#">{{ 'Pictures'|trans }}</a></li>
                                                <li><a class="dropdown-item" href="#">{{ 'Videos'|trans }}</a></li>
                                            </ul>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><span>{{ 'Datas'|trans }}</span></a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><span>{{ 'Contact'|trans }}</span></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </section>
                    {% block headerImage %}{% endblock %}

                </header>
                {% block body %}{% endblock %}
                <footer>
                    <div class="footer" data-aos="fade-up">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="{{ absolute_url(asset('assets/images/logo_bw.svg')) }}" alt="Logo ITPCWA">
                                    <p>
                                        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ex repellendus dolore dolores neque, consectetur,
                                        porro voluptates obcaecati unde ipsum quae ut cumque expedita suscipit minus inventore, adipisci iusto reiciendis animi.
                                    </p>
                                </div>
                                <div class="col-md-8 rubriques">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <a href="#">Présentation</a>
                                            <a href="#">Vision et mission</a>
                                            <a href="#">Axes stratégiques</a>
                                            <a href="#">Zone d'intervention</a>
                                        </div>
                                        <div class="col-lg-4">
                                            <a href="#">{{ 'Projects'|trans }}</a>
                                            <a href="#">{{ 'News'|trans }}</a>
                                            <a href="#">{{ 'Resources'|trans }}</a>
                                            <a href="#">{{ 'Recruitments'|trans }}</a>
                                        </div>
                                        <div class="col-lg-4">
                                            <div><a href="#">Abidjan / Côte d'Ivoire</a></div>
                                            <div><a href="tel:+2250000000000">Tel: +225 00 00 000 00</a></div>
                                            <div><a href="mailto:info@itpcwa.org">info@itpcwa.org</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row plan">
                                <div class="col-lg-8 sitemap">
                                    <a href="{{ absolute_url(path('app_sitemap', {'_locale': locale})) }}">{{ 'Sitemap'|trans }}</a>
                                </div>
                                <div class="col-lg-4 social-icons">
                                    <a href="#" class="icon-facebook"><i class="fa-brands fa-facebook-square"></i></a>
                                    <a href="#" class="icon-instagram"><i class="fa-brands fa-instagram-square"></i></a>
                                    <a href="#" class="icon-twitter"><i class="fa-brands fa-twitter-square"></i></a>
                                    <a href="#" class="icon-youtube"><i class="fa-brands fa-youtube-square"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="copyright">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-10">
                                    &COPY; Copyright 2018-2022 ITPC West Africa | {{ 'All rights reserved'|trans }}.
                                </div>
                                <div class="col-sm-2">
                                    <a href="{{ absolute_url(path('app_backend_dashboard')) }}" target="_blank">Backend</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>

        </div>


        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v13.0" nonce="6sfAWFus"></script>
            <script src="{{ absolute_url(asset('assets/js/app2.js')) }}"></script>
            <script>
                AOS.init();
            </script>
        {% endblock %}
    </body>
</html>
