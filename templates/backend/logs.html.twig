{% extends 'backend_layout.html.twig' %}

{% block title %}Les pages les plus visités{% endblock %}

{% block body %}
<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="page-header-title">Tableau de bord</h1>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-3 mb-lg-5">

            <div class="card h-100">
                <div class="card-header card-header-content-between">
                    <h4 class="card-header-title">Pages les plus visitées</h4>
                </div>

                <div class="card-body">
                    <table id="liste" class="table">
                        <thead>
                        <tr>
                            <td class="text-center">#</td>
                            <td class="text-center">VISITES</td>
                            <td class="text-center">PAGES</td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for page in pages %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td class="text-center"><span class="badge bg-info">{{ page.nombre }}</span></td>
                                <td>
                                    <a href="{{ page.url }}" target="_blank" style="color: black">{{ page.url }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#liste').DataTable();
        });
    </script>
{% endblock %}

