{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Presentation's list{% endblock %}

{% block body %}
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h1 class="page-header-title">Presentation's list</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-end mb-5">
                <a href="{{ path('app_backend_en_presentation_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i> add</a>
            </div>
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h4 class="card-header-title">List of articles in the section who are we?</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <div class="table-responsive datatable-custom">
                            <table id="liste" class="table table-borderless table-thead-bordered table-nowrap table-align-middle card-table" data-hs-datatables-options='{
                   "columnDefs": [{
                      "targets": [0, 4, 9],
                      "width": "5%",
                      "orderable": false
                    }],
                   "order": [],
                   "info": {
                     "totalQty": "#datatableWithPaginationInfoTotalQty"
                   },
                   "search": "#datatableSearch",
                   "entries": "#datatableEntries",
                   "pageLength": 12,
                   "isResponsive": false,
                   "isShowPaging": false,
                   "pagination": "datatablePagination"
                 }'>
                                <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="table-column-pe-0">#</th>
                                    <th>TYPES</th>
                                    <th>TITLES</th>
                                    <th>ACTIONS</th>
                                </thead>

                                <tbody>
                                {% for presentation in en_presentations %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ presentation.type }}</td>
                                        <td>{{ presentation.titre }}</td>
                                        <td>
                                            <a href="{{ path('app_backend_en_presentation_show', {'id': presentation.id}) }}"><i class="fa fa-eye"></i></a>
                                            &nbsp; | &nbsp;
                                            <a href="{{ path('app_backend_en_presentation_edit', {'id': presentation.id}) }}"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>

                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center"><em>No records found</em></td>
                                    </tr>
                                {% endfor %}


                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
    <script src="{{ asset('assets/js/upload-init.js') }}"></script>
    <script type='text/javascript'>

        $("input[data-preview]").change(function() {
            var $input = $(this);
            var fileReader = new FileReader();
            fileReader.readAsDataURL(this.files[0]);
            fileReader.onload = function(fileEvent) {
                $($input.data('preview')).attr('src', fileEvent.target.result);
            };
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#liste').DataTable();
        });
    </script>
{% endblock %}
